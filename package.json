{
	"name": "node-ts-template",
	"version": "0.1.0",
	"private": true,
	"description": "Template for Node.js + TypeScript with Yarn, TSX, ESLint, Oxlint, Prettier, Vitest, and tsup.",
	"license": "UNLICENSED",
	"type": "module",
	"main": "dist/index.js",
	"packageManager": "yarn@4.9.4",
	"scripts": {
		"dev": "tsx watch src/index.ts",
		"build": "tsup",
		"check-types": "tsc --noEmit",
		"lint": "oxlint --deny-warnings && eslint . --max-warnings 0",
		"test": "vitest",
		"test:coverage": "vitest run --coverage",
		"format": "tsx bin/format.ts write",
		"format:ci": "tsx bin/format.ts check",
		"clean": "rm -rf dist coverage node_modules"
	},
	"devDependencies": {
		"@types/node": "^24.10.0",
		"@types/yargs": "^17.0.34",
		"@vitest/coverage-v8": "^4.0.7",
		"eslint": "^9.39.1",
		"jiti": "^2.6.1",
		"oxlint": "^1.26.0",
		"prettier": "^3.6.2",
		"tsup": "^8.5.0",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.46.3",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^4.0.7"
	},
	"volta": {
		"node": "24.11.0",
		"yarn": "4.10.3"
	}
}
